<div class="col-md-12">

  <h2 class="text-center"> 我发表的影片 </h2>

  <table class="table">
    <thead>
      <tr>
        <th> # </th>
        <th> 影片名称 </th>
        <th> 影片介绍 </th>
        <th> 评论人数 </th>
        <th> 最后修改时间 </th>
      </tr>
    </thead>

    <tbody>
      <% @groups.each do |group| %>
        <tr>
          <td> # </td>
          <td> <%= link_to(group.title, group_path(group)) %> </td>
          <td><%= render_group_description(group) %></td>
          <td> <%= group.posts.count %> </td>
          <td> <%= group.updated_at %> </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
