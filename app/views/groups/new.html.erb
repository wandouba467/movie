<div class="col-md-4 col-md-offset-4">
  <h2>新增影片</h2>

  <hr>
  <%= form_for @group do |f| %>

  <% if @group.errors.any? %>
  <ul>
    <% @group.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
  </ul>
  <% end %>

  影片名称
  <br>
  <%= f.text_field :title %>
  <br>
  影片介绍
  <br>
  <%= f.text_area :description %>
  <br>

  <%= f.submit "新增影片", :disable_with => 'Submiting...'%>
  <% end %>
</div>
