<div class="col-md-12">
  <div class="group">
    <%= link_to("新增影片", new_group_path, class: "btn btn-primary pull-right") %>
  </div>
  <table class="table table-hover">
    <thead>
    <tr>
      <td>#</td>
      <td>影片名称</td>
      <td>影片介绍</td>
      <td>创建人</td>
    </tr>
    </thead>
   <tbody>
    <% @groups.each do |group| %>
      <tr>
      <td>#</td>
      <td><%= link_to(group.title, group_path(group)) %></td>
      <td><%= simple_format(group.description) %></td>
      <td><%= group.user.email %> </td>
      <td>
        <% if current_user && current_user == group.user %>
        <%= link_to("编辑", edit_group_path(group), class: "btn btn-sm btn-default")%>
        <%= link_to("删除", group_path(group),    class: "btn btn-sm btn-default",
                method: :delete, data: { confirm: "Are you sure?" } )%>
      <% end %>
      </td>
      </tr>
      <% end %>
   </tbody>
  </table>
</div>
